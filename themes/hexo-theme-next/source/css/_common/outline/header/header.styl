// Header Section
// --------------------------------------------------
.header {
  background: $head-bg;
}

.header-inner {
  margin: 0 auto;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }
}

.site-brand-container {
  display: flex;
  flex-shrink: 0;
  padding: 0 10px;
  border-radius: 18.8px 18.8px 0 0; // 上边圆角 下边尖角 不设置20px 20px 0 0的原因是因为下面的sidebar的class="header"有一点白色溢出 所以把圆角设置小点对其进行覆盖
}

@import 'headerband';
@import 'site-meta';
@import 'site-nav';
@import 'menu';

@import 'bookmark' if (hexo-config('bookmark.enable'));

@import 'github-banner' if (hexo-config('github_banner.enable'));
